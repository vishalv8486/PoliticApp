<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="90" android:endColor="#A4A4A4" android:startColor="#ffffff" />

            <stroke android:width="2dp" android:color="#ffffff" />

            <corners android:radius="5dp" />
        </shape></item>
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="90" android:endColor="@android:color/transparent" android:startColor="#A4A4A4" />

            <corners android:radius="3dp" />

            <stroke android:width="5px" android:color="@android:color/transparent" />
        </shape></item>

</selector>